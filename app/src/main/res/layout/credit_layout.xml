<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CUSTOMER CREDIT"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textAllCaps="true"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20dp">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your current credit Balance is"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/text1"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:textColor="@color/black"
                android:text="0.00"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:text="Enter a credit amount if you want to pay by Customer Credit"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/amount_edit_text"
            android:maxLines="1"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:paddingLeft="@dimen/dimen_5dp"
            android:background="@drawable/shape_edit_text"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp">
            <Button
                android:id="@+id/apply_button"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="apply"
                android:padding="@dimen/dimen_5dp"
                android:background="#4BEAE3"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/dimen_10dp"/>

            <Button
                android:id="@+id/cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="cancel"
                android:padding="@dimen/dimen_5dp"
                android:background="#4BEAE3"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_toRightOf="@id/apply_button"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/dimen_10dp"/>
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>