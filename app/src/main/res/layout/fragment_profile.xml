<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">


    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:visibility="gone"
        android:background="@color/colorPrimary">
        <TextView
            android:id="@+id/profile_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_centerVertical="true"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:text="Profile settings"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_above="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/basic_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textSize="17sp"
                    android:layout_marginTop="@dimen/dimen_20dp"
                    android:text="Basic Settings"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/vendor_name_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textSize="13sp"
                        android:layout_weight="1"
                        android:textAllCaps="true"
                        android:text="Vendor Name"/>
                    <EditText
                        android:id="@+id/vendor_name_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textSize="15sp"
                        android:layout_weight="1"
                        android:maxLines="1"
                        android:inputType="text"
                        android:backgroundTint="@color/colorPrimary"
                        android:hint="Ranjith Kumar"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/owner_name_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textSize="13sp"
                        android:layout_weight="1"
                        android:textAllCaps="true"
                        android:text="Owner Name"/>
                    <EditText
                        android:id="@+id/owner_name_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textSize="15sp"
                        android:maxLines="1"
                        android:inputType="text"
                        android:layout_weight="1"
                        android:backgroundTint="@color/colorPrimary"
                        android:hint="Joseph"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/established_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textSize="13sp"
                        android:layout_weight="1"
                        android:textAllCaps="true"
                        android:text="established date"/>
                    <EditText
                        android:id="@+id/established_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textSize="15sp"
                        android:layout_weight="1"
                        android:maxLines="1"
                        android:inputType="text"
                        android:backgroundTint="@color/colorPrimary"
                        android:hint="24/01/2019"/>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/registration_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textSize="13sp"
                        android:layout_weight="1"
                        android:textAllCaps="true"
                        android:text="registration type"/>
                    <EditText
                        android:id="@+id/registration_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textSize="15sp"
                        android:layout_weight="1"
                        android:maxLines="1"
                        android:inputType="text"
                        android:backgroundTint="@color/colorPrimary"
                        android:hint="Temporary"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/employees_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textSize="13sp"
                        android:layout_weight="1"
                        android:textAllCaps="true"
                        android:text="No.Of.Employees"/>
                    <EditText
                        android:id="@+id/employees_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textSize="15sp"
                        android:layout_weight="1"
                        android:maxLines="1"
                        android:inputType="phone"
                        android:backgroundTint="@color/colorPrimary"
                        android:hint="10"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/contact_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="50dp"
                    android:textSize="17sp"
                    android:text="Contact Settings"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mobile_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textSize="13sp"
                        android:layout_weight="1"
                        android:textAllCaps="true"
                        android:text="phone"/>
                    <EditText
                        android:id="@+id/mobile_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textSize="15sp"
                        android:layout_weight="1"
                        android:maxLines="1"
                        android:inputType="phone"
                        android:backgroundTint="@color/white"
                        android:hint="215676566556"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/email_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textSize="13sp"
                        android:layout_weight="1"
                        android:textAllCaps="true"
                        android:text="email"/>
                    <EditText
                        android:id="@+id/email_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textSize="15sp"
                        android:layout_weight="1"
                        android:maxLines="1"
                        android:inputType="phone"
                        android:backgroundTint="@color/white"
                        android:hint="bbhbf@gmail.com"/>





                </LinearLayout>




            </LinearLayout>
        </ScrollView>
    </LinearLayout>

<RelativeLayout
   android:id="@+id/bottom_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_20dp"
    android:layout_alignParentBottom="true">
    <Button
        android:id="@+id/update_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:padding="5dp"
        android:text="Update"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:background="@drawable/button_effect" />



    <Button
        android:id="@+id/submit_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:padding="5dp"
        android:text="Submit"
        android:textSize="17sp"
        android:textStyle="bold"
        android:visibility="gone"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_effect"
        android:layout_gravity="center_horizontal"/>

</RelativeLayout>

</RelativeLayout>