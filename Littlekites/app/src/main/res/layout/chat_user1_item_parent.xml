<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <FrameLayout
        android:id="@+id/incoming_layout_bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/balloon_incoming_normal"
        android:layout_alignParentLeft="true"
        android:padding="10dp">
        <TextView
            android:id="@+id/textdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="a day ago"/>
        <TextView
            android:id="@+id/textview_time"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingRight="5dp"
            android:text="11:15 PM"
            android:layout_marginTop="40dp"
            android:paddingLeft="20dp"
            style="@style/chat_timings"
            android:layout_gravity="bottom|right"/>

        <TextView
            android:id="@+id/textview_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:layout_marginTop="15dp"
            android:autoLink="web"
            android:text="Rahul Agrawal is a good boy but he does not know what he wants."
            style="@style/chat_text_message_style"/>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/ougoing_layout_bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/balloon_outgoing_normal"
        android:layout_alignParentRight="true"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="bottom|right"
            android:layout_marginTop="40dp"
            android:paddingRight="5dp">

            <TextView
                android:id="@+id/textview_time2"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginRight="4dp"
                android:text="11:15 PM"
                style="@style/chat_timings"/>



        </LinearLayout>

        <TextView
            android:id="@+id/textdate2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="a day ago"
            android:paddingRight="20dp"/>
        <TextView
            android:id="@+id/textview_message2"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingRight="6dp"
            android:autoLink="web"
            android:layout_marginTop="15dp"
            android:text="Rahul Agrawal is a good boy but he does not know what he wants."
            style="@style/chat_text_message_style"/>


    </FrameLayout>

</RelativeLayout>